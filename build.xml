<?xml version="1.0" encoding="UTF-8"?>
<project name="apic-cicd" default="ci" basedir=".">

    <!-- ================== Properties ================== -->
    <property name="api.dir" location="apis"/>
    <property name="product.dir" location="products"/>
    <property name="catalog.name" value="${CATALOG_NAME}"/>
    <property name="api.name" value="${API_NAME}"/>
    <property name="api.version" value="${API_VERSION}"/>
    <property name="product.name" value="${PRODUCT_NAME}"/>
    <property name="product.version" value="${PRODUCT_VERSION}"/>
    <property name="publish" value="${publish}"/>

    <!-- ================== Main CI target ================== -->
    <target name="ci" depends="login,validate,api-draft,product-draft,publish-product"/>

    <!-- ================== Login ================== -->
    <target name="login">
        <echo message="🔐 Logging in to API Connect..." />
        <exec executable="apic" failonerror="true">
            <arg value="login"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--username"/>
            <arg value="umesh"/>
            <arg value="--password"/>
            <arg value="!n0r1t5@C"/>
            <arg value="--realm"/>
            <arg value="provider/default-idp-2"/>
        </exec>
    </target>

    <!-- ================== Validate API ================== -->
    <target name="validate">
        <echo message="✅ Validating API YAML for ${api.name}" />
        <exec executable="apic" failonerror="true">
            <arg value="validate"/>
            <arg value="${api.dir}/${api.name}.yaml"/>
        </exec>
    </target>

    <!-- ================== API Draft ================== -->
    <target name="api-draft" depends="validate">
        <echo message="📦 Checking draft API ${api.name}:${api.version}..." />

        <!-- List all draft APIs -->
        <exec executable="apic" outputproperty="api.list" failonerror="true">
            <arg value="draft-apis:list-all"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
        </exec>

        <!-- Check if API exists -->
        <condition property="api.exists">
            <matches string="${api.list}" pattern="(?m)^${api.name}:${api.version}\s"/>
        </condition>

        <!-- Conditional create/update -->
        <antcall target="api-create-if-needed" unless="api.exists"/>
        <antcall target="api-update-if-needed" if="api.exists"/>
    </target>

    <target name="api-create-if-needed">
        <echo message="🆕 Draft API does not exist, creating ${api.name}:${api.version}" />
        <exec executable="apic" failonerror="true">
            <arg value="draft-apis:create"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="${api.dir}/${api.name}.yaml"/>
        </exec>
    </target>

    <target name="api-update-if-needed">
        <echo message="🔄 Draft API exists, updating ${api.name}:${api.version}" />
        <exec executable="apic" failonerror="true">
            <arg value="draft-apis:update"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="${api.name}:${api.version}"/>
            <arg value="${api.dir}/${api.name}.yaml"/>
        </exec>
    </target>

    <!-- ================== Product Draft ================== -->
    <target name="product-draft">
        <echo message="📦 Checking draft Product ${product.name}:${product.version}..." />

        <!-- List all draft products -->
        <exec executable="apic" outputproperty="product.list" failonerror="true">
            <arg value="draft-products:list-all"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
        </exec>

        <!-- Check if Product exists -->
        <condition property="product.exists">
            <matches string="${product.list}" pattern="(?m)^${product.name}:${product.version}\s"/>
        </condition>

        <!-- Conditional create/update -->
        <antcall target="product-create-if-needed" unless="product.exists"/>
        <antcall target="product-update-if-needed" if="product.exists"/>
    </target>

    <target name="product-create-if-needed">
        <echo message="🆕 Draft Product does not exist, creating ${product.name}:${product.version}" />
        <exec executable="apic" failonerror="true">
            <arg value="draft-products:create"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="${product.dir}/${product.name}.yaml"/>
        </exec>
    </target>

    <target name="product-update-if-needed">
        <echo message="🔄 Draft Product exists, updating ${product.name}:${product.version}" />
        <exec executable="apic" failonerror="true">
            <arg value="draft-products:update"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="${product.name}:${product.version}"/>
            <arg value="${product.dir}/${product.name}.yaml"/>
        </exec>
    </target>

    <!-- ================== Publish Product ================== -->
    <target name="publish-product" if="publish">
        <echo message="🚀 Publishing Product ${product.name}:${product.version} to catalog ${catalog.name}" />
        <exec executable="apic" failonerror="true">
            <arg value="products:publish"/>
            <arg value="${product.dir}/${product.name}.yaml"/>
            <arg value="--catalog"/>
            <arg value="${catalog.name}"/>
        </exec>
    </target>

</project>
