<?xml version="1.0" encoding="UTF-8"?>
<project name="apic-cicd" default="ci" basedir=".">

    <!-- ================== Properties ================== -->
    <property name="api.dir" location="apis"/>
    <property name="product.dir" location="products"/>
    <property name="catalog.name" value="${CATALOG_NAME}"/>
    <property name="api.name" value="${API_NAME}"/>
    <property name="api.version" value="${API_VERSION}"/>
    <property name="product.name" value="${PRODUCT_NAME}"/>
    <property name="product.version" value="${PRODUCT_VERSION}"/>
    <property name="publish" value="${publish}"/>

    <!-- ================== Targets ================== -->
    <target name="ci" depends="login,validate,api-draft,product-draft,publish-product"/>

    <!-- ================== Login ================== -->
    <target name="login">
        <echo message="🔐 Logging in to API Connect..." />
        <exec executable="apic" failonerror="true">
            <arg value="login"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--username"/>
            <arg value="umesh"/>
            <arg value="--password"/>
            <arg value="!n0r1t5@C"/>
            <arg value="--realm"/>
            <arg value="provider/default-idp-2"/>
        </exec>
    </target>

    <!-- ================== Validate API ================== -->
    <target name="validate">
        <echo message="✅ Validating API YAML for ${api.name}" />
        <exec executable="apic" failonerror="true">
            <arg value="validate"/>
            <arg value="${api.dir}/${api.name}.yaml"/>
        </exec>
    </target>

    <!-- ================== API Draft ================== -->
    <target name="api-draft" depends="validate">
        <echo message="📦 Checking draft API ${api.name}:${api.version}..." />

        <!-- List all draft APIs in org -->
        <exec executable="apic" outputproperty="api.list" failonerror="true">
            <arg value="draft-apis:list-all"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
        </exec>

        <!-- Check if the draft API exists -->
        <condition property="api.exists">
            <contains string="${api.list}" substring="${api.name}:${api.version}"/>
        </condition>

        <echo message="Draft APIs in org: ${api.list}"/>
        <echo message="API ${api.name}:${api.version} exists? ${api.exists}"/>

        <!-- Call create/update targets -->
        <antcall target="maybe-api-create"/>
        <antcall target="maybe-api-update"/>
    </target>

    <!-- Conditional API create -->
    <target name="maybe-api-create" unless="api.exists">
        <antcall target="api-create"/>
    </target>

    <!-- Conditional API update -->
    <target name="maybe-api-update" if="api.exists">
        <antcall target="api-update"/>
    </target>

    <!-- Create API draft -->
    <target name="api-create">
        <echo message="🆕 Creating new draft API ${api.name}:${api.version}" />
        <exec executable="apic" failonerror="true">
            <arg value="draft-apis:create"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="${api.dir}/${api.name}.yaml"/>
        </exec>
    </target>

    <!-- Update API draft -->
    <target name="api-update">
        <echo message="🔄 Updating existing draft API ${api.name}:${api.version}" />
        <exec executable="apic" failonerror="true">
            <arg value="draft-apis:update"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="${api.name}:${api.version}"/>
            <arg value="${api.dir}/${api.name}.yaml"/>
        </exec>
    </target>

    <!-- ================== Product Draft ================== -->
    <target name="product-draft">
        <echo message="📦 Checking draft Product ${product.name}:${product.version}..." />

        <!-- List all draft products in org -->
        <exec executable="apic" outputproperty="product.list" failonerror="true">
            <arg value="products:list-all"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="-c"/>
            <arg value="prod"/>
            <arg value="--scope"/>
            <arg value="catalog"/>
        </exec>

        <!-- Check if product exists -->
        <condition property="product.exists">
            <contains string="${product.list}" substring="${product.name}:${product.version}"/>
        </condition>

        <echo message="Draft Products in org: ${product.list}"/>
        <echo message="Product ${product.name}:${product.version} exists? ${product.exists}"/>

        <!-- Call create/update targets -->
        <antcall target="maybe-product-create"/>
        <antcall target="maybe-product-update"/>
    </target>

    <!-- Conditional Product create -->
    <target name="maybe-product-create" unless="product.exists">
        <antcall target="product-create"/>
    </target>

    <!-- Conditional Product update -->
    <target name="maybe-product-update" if="product.exists">
        <antcall target="product-update"/>
    </target>

    <!-- Create Product draft -->
    <target name="product-create">
        <echo message="🆕 Creating new draft Product ${product.name}:${product.version}" />
        <exec executable="apic" failonerror="true">
            <arg value="draft-products:create"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="${product.dir}/${product.name}.yaml"/>
        </exec>
    </target>

    <!-- Update Product draft -->
    <target name="product-update">
        <echo message="🔄 Updating existing draft Product ${product.name}:${product.version}" />
        <exec executable="apic" failonerror="true">
            <arg value="draft-products:update"/>
            <arg value="--server"/>
            <arg value="https://small-1-mgmt-api-manager-cp4i.apps.ocp.prontefflabs.com"/>
            <arg value="--org"/>
            <arg value="indusapi-np"/>
            <arg value="${product.name}:${product.version}"/>
            <arg value="${product.dir}/${product.name}.yaml"/>
        </exec>
    </target>

    <!-- ================== Publish Product ================== -->
    <target name="publish-product" if="publish">
        <echo message="🚀 Publishing Product ${product.name}:${product.version} to catalog ${catalog.name}" />
        <exec executable="apic" failonerror="true">
            <arg value="products:publish"/>
            <arg value="${product.dir}/${product.name}.yaml"/>
            <arg value="--catalog"/>
            <arg value="${catalog.name}"/>
        </exec>
    </target>

</project>
